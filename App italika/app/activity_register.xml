<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/colorWhite"
    android:id="@+id/activityRegisterCoordinator"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp">

            <EditText
                android:id="@+id/activityAddRegisterEdtTxtModel"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="15dp"
                android:padding="8dp"
                android:background="@drawable/border_editext_gray"
                android:paddingLeft="5dp"
                android:inputType="textCapWords|textCapSentences"
                android:imeOptions="actionNext"
                android:singleLine="true"
                android:hint="Modelo" />

            <TextView
                android:id="@+id/activityAddRegisterTvModel"
                android:paddingLeft="5dp"
                android:visibility="gone"
                android:paddingRight="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="7dp"
                android:textColor="@color/colorBlack"
                android:background="@color/colorWhite"
                android:text="Modelo" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp">

            <EditText
                android:id="@+id/activityAddRegisterEdtTxtYear"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="15dp"
                android:padding="8dp"
                android:background="@drawable/border_editext_gray"
                android:paddingLeft="5dp"
                android:inputType="number"
                android:imeOptions="actionNext"
                android:singleLine="true"
                android:hint="Año" />

            <TextView
                android:id="@+id/activityAddRegisterTvYear"
                android:paddingLeft="5dp"
                android:visibility="gone"
                android:paddingRight="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="7dp"
                android:textColor="@color/colorBlack"
                android:background="@color/colorWhite"
                android:text="Año" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp">

            <EditText
                android:id="@+id/activityAddRegisterEdtTxtNoSerie"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="15dp"
                android:padding="8dp"
                android:background="@drawable/border_editext_gray"
                android:paddingLeft="5dp"
                android:inputType="textCapCharacters"
                android:imeOptions="actionNext"
                android:singleLine="true"
                android:hint="Número de serie" />

            <TextView
                android:id="@+id/activityAddRegisterTvNoSerie"
                android:paddingLeft="5dp"
                android:visibility="gone"
                android:paddingRight="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="7dp"
                android:textColor="@color/colorBlack"
                android:background="@color/colorWhite"
                android:text="Número de serie" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp">

            <EditText
                android:id="@+id/activityAddRegisterEdtTxtPlates"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="15dp"
                android:padding="8dp"
                android:background="@drawable/border_editext_gray"
                android:paddingLeft="5dp"
                android:inputType="textCapCharacters"
                android:imeOptions="actionNext"
                android:singleLine="true"
                android:hint="Placas" />

            <TextView
                android:id="@+id/activityAddRegisterTvPlates"
                android:paddingLeft="5dp"
                android:visibility="gone"
                android:paddingRight="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="7dp"
                android:textColor="@color/colorBlack"
                android:background="@color/colorWhite"
                android:text="Placas" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp">

            <EditText
                android:id="@+id/activityAddRegisterEdtTxtKm"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="15dp"
                android:padding="8dp"
                android:background="@drawable/border_editext_gray"
                android:paddingLeft="5dp"
                android:inputType="number"
                android:imeOptions="actionDone"
                android:singleLine="true"
                android:hint="Kilometraje" />

            <TextView
                android:id="@+id/activityAddRegisterTvKm"
                android:paddingLeft="5dp"
                android:visibility="gone"
                android:paddingRight="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="7dp"
                android:textColor="@color/colorBlack"
                android:background="@color/colorWhite"
                android:text="Kilometraje" />
        </RelativeLayout>

        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="bottom"
                android:layout_weight="1">

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:onClick="onClickCancel"
                    android:layout_marginRight="10dp"
                    app:cardBackgroundColor="@color/colorGreySilver"
                    app:cardCornerRadius="5dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="Cancelar"
                        android:textAllCaps="true" />

                </android.support.v7.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="bottom"
                android:layout_weight="1">

                <android.support.v7.widget.CardView
                    android:id="@+id/activityAddRegisterBtnSave"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="10dp"
                    android:onClick="onClickSave"
                    app:cardBackgroundColor="@color/colorAccent"
                    app:cardCornerRadius="5dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="GUARDAR"
                        android:textColor="@color/colorWhite" />

                </android.support.v7.widget.CardView>

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

</android.support.design.widget.CoordinatorLayout>