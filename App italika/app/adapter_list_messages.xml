<?xml version="1.0" encoding="utf-8"?>

<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorGreySilver"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:id="@+id/adapterListMessagesTwDate"
        android:gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:text=""
        android:layout_height="wrap_content"/>

    <android.support.v7.widget.CardView
        android:id="@+id/adapterListMessagesCardVwBlue"
        android:layout_marginLeft="70dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:visibility="gone"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:contentPadding="5dp"
        app:cardElevation="5dp"
        app:cardBackgroundColor="@color/colorBlue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:id="@+id/adapterListMessagesTwNameBlue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorWhite"
                android:textStyle="bold"
                android:textSize="17dp"
                android:text=""/>

            <TextView
                android:id="@+id/adapterListMessagesTwMessageBlue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorWhite"/>

            <TextView
                android:id="@+id/adapterListMessagesVistoB"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:visibility="gone"
                android:textColor="@color/colorWhite"
                android:text="✔✔"/>

        </LinearLayout>


    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/adapterListMessagesCardVwWhite"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="70dp"
        android:layout_marginBottom="10dp"
        android:visibility="gone"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:contentPadding="5dp"
        app:cardElevation="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:id="@+id/adapterListMessagesTwNameWhite"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorBlack"
                android:textStyle="bold"
                android:textSize="17dp"/>

            <TextView
                android:id="@+id/adapterListMessagesTwMessageWhite"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/adapterListMessagesVistoW"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:visibility="gone"
                android:textColor="@color/colorBlack"
                android:text="✔✔"/>

        </LinearLayout>


    </android.support.v7.widget.CardView>


</LinearLayout>
